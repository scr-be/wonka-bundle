{
    "name"        : "scr-be/wonka-bundle",
    "license"     : "MIT",
    "type"        : "project",
    "homepage"    : "https://scr.be/wonka-bundle",
    "description" : "A collection of objects/interfaces to simplify bundle setup, such as advanced bundle configuration, compiler passes, and deprecaton error handlers.",
    "support" : {
        "email"  : "rmf@scr.be",
        "issues" : "https://scr.be/wonka-bundle/issues",
        "source" : "https://scr.be/wonka-bundle/git",
        "irc"    : "irc://irc.efnet.org/scribe"
    },
    "keywords"   : [
        "wonka-bundle", "scribe-wonka-bundle", "bundle", "scr.be", "scribe", "scribenet", "scribe-software", "scribe-systems"
    ],
    "authors"    : [
        {
            "name"    : "Rob Frawley 2nd",
            "email"   : "rmf@scr.be",
            "homepage": "https://scr.be/rmf",
            "role"    : "Project Lead"
        }
    ],
    "require" : {
        "php"                          : "~5.5|~5.6|~7.0",
        "scr-be/wonka-library"         : "~0.5",
        "symfony/config"               : "~2.8|~3.0",
        "symfony/http-foundation"      : "~2.8|~3.0",
        "symfony/dependency-injection" : "~2.8|~3.0",
        "symfony/polyfill-php70"       : "~1.1",
        "symfony/polyfill-php56"       : "~1.1",
        "symfony/polyfill-php55"       : "~1.1",
        "symfony/polyfill-util"        : "~1.1"
    },
    "require-dev" : {
        "scr-be/arthur-doctrine-library" : "~0.3",
        "symfony/symfony"          : "~2.8|~3.0",
        "symfony/framework-bundle" : "~2.8|~3.0",
        "symfony/debug-bundle"     : "~2.8|~3.0",
        "symfony/debug"            : "~2.8|~3.0",
        "symfony/monolog-bundle"   : "~2.8|~3.0",
        "monolog/monolog"          : "~1.18",
        "symfony/twig-bundle"      : "~2.8|~3.0",
        "twig/twig"                : "~1.24,<2.0",
        "symfony/stopwatch"        : "~2.8|~3.0",
        "symfony/phpunit-bridge"   : "~2.8|~3.0",
        "doctrine/orm"             : "~2.5",
        "phpunit/phpunit"          : "~5.0",
        "codacy/coverage"          : "~1.0",
        "satooshi/php-coveralls"   : "~1.0",
        "chriskite/phactory"       : "~0.4"
    },
    "conflict" : {
        "scribe/mantle-bundle" : "<2.2.0"
    },
    "autoload" : {
        "psr-4" : {
            "Scribe\\WonkaBundle\\" : "src/"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "Scribe\\WonkaBundle\\Tests\\" : "tests/"
        }
    },
    "minimum-stability" : "dev",
    "prefer-stable"     : true,
    "config": {
        "process-timeout"        : 120,
        "bin-dir"                : "bin",
        "cache-files-ttl"        : 60,
        "classmap-authoritative" : true,
        "github-expose-hostname" : false,
        "notify-on-install"      : false,
        "discard-changes"        : "stash"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.5-dev"
        }
    }
}
